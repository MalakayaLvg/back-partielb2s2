{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>

                <tr>
                    <th>QR Code</th>
                    <td><img src="{{ product.qrCode }}" alt="QR Code pour {{ product.name }}" class="img-fluid" style="max-width: 250px;"></td>
                </tr>
        </tbody>
    </table>

    <a href="{{ path('app_product_index') }}">back to list</a>

    <a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>

    <a href="{{ path('app_product_download_pdf', {'id': product.id}) }}" class="btn btn-primary">
        Télécharger le QR Code en PDF
    </a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
